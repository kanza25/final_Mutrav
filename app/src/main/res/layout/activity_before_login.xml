<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="@dimen/activity_vertical_margin"
tools:context="com.example.kanza_yahya.testarham.BeforeLogin">

<ImageView
    android:id="@+id/image_logo1"
    android:layout_width="120dp"
    android:layout_height="90dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="30dp"
    android:src="@mipmap/logo" android:contentDescription="TODO" />


<Button
    android:id="@+id/btn_login"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_below="@+id/image_logo1"
    android:layout_marginTop="40dp"
    android:background="@drawable/rounded_corner"
    android:backgroundTint="@color/dot_light_screen1"
    android:text="Login"
    android:textColor="@color/colorWhite"
    android:textSize="22dp" />

<Button
    android:id="@+id/btn_signup"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_below="@+id/btn_login"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="25dp"
    android:background="@drawable/rounded_corner"
    android:backgroundTint="@color/dot_light_screen1"
    android:text="Sign UP"
    android:textColor="@color/colorWhite"
    android:textSize="22dp" />

</RelativeLayout>
